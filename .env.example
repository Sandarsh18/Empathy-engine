# Environment Variables Configuration

# Copy this file to .env and configure your API keys and settings
# NEVER commit your actual .env file to version control!

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Primary provider: "gemini", "perplexity", or "mock"
PROVIDER=gemini

# Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Perplexity API Configuration  
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# =============================================================================
# Application Configuration
# =============================================================================

# Application Settings
APP_NAME="Empathy Engine"
DEBUG=true
LOG_LEVEL=DEBUG

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security Settings
SECRET_KEY=your_secret_key_here_change_in_production
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173"

# =============================================================================
# Database Configuration (Optional - for future use)
# =============================================================================

# PostgreSQL Database (if using persistent storage)
# DATABASE_URL=postgresql://username:password@localhost:5432/empathy_engine

# Redis Configuration (for caching and sessions)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# External Services (Optional)
# =============================================================================

# Monitoring and Error Tracking
# SENTRY_DSN=your_sentry_dsn_here

# Analytics (Privacy-respecting)
# ANALYTICS_TOKEN=your_analytics_token_here

# Email Service (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
ENABLE_VOICE_FEATURES=true
ENABLE_EMOTION_DETECTION=true
ENABLE_ANALYTICS=false
ENABLE_RATE_LIMITING=true

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# =============================================================================
# Development Configuration
# =============================================================================

# Development specific settings
DEV_MODE=true
AUTO_RELOAD=true
SHOW_SQL_QUERIES=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./test.db
TEST_MODE=false

# =============================================================================
# Mobile App Configuration
# =============================================================================

# Expo Configuration
EXPO_PUBLIC_API_URL=http://localhost:8000
EXPO_PUBLIC_WS_URL=ws://localhost:8000/ws

# Push Notifications (Expo)
# EXPO_PUSH_TOKEN=your_expo_push_token_here

# =============================================================================
# Frontend Configuration
# =============================================================================

# React App Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_ENABLE_VOICE=true
REACT_APP_ENABLE_ANALYTICS=false

# =============================================================================
# Production Overrides (use in .env.production)
# =============================================================================

# Uncomment and modify for production deployment
# DEBUG=false
# LOG_LEVEL=INFO
# HOST=0.0.0.0
# PORT=8000
# CORS_ORIGINS="https://empathy-engine.com,https://www.empathy-engine.com"
# ENABLE_ANALYTICS=true
# RATE_LIMIT_PER_MINUTE=60
# AUTO_RELOAD=false

# =============================================================================
# Security Notes
# =============================================================================

# 1. Never commit this file with real API keys
# 2. Use strong, unique SECRET_KEY in production
# 3. Rotate API keys regularly
# 4. Use environment-specific values
# 5. Consider using a secrets management service for production
# 6. Monitor API usage for anomalies
# 7. Enable rate limiting in production
# 8. Use HTTPS in production (configure in reverse proxy)

# =============================================================================
# Quick Setup Guide
# =============================================================================

# 1. Copy this file: cp .env.example .env
# 2. Get Gemini API key: https://makersuite.google.com/app/apikey  
# 3. Set GEMINI_API_KEY in your .env file
# 4. Optionally set other providers and configurations
# 5. Run: ./scripts/setup.sh
# 6. Start development: ./scripts/deploy.sh development
